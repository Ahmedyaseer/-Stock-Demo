@model Item
@{
    ViewBag.Title = "Delete Item";
}

    <h2 class="alert alert-danger">Are you Sure you need to Remove Item @Model.Name</h2>
    <hr />
    <form  method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes, Sure" class="btn btn-danger" />
    </form>
   <hr />
    <a asp-action="Index" asp-controller="Item" class="btn btn-outline-success"> Back to Items </a>
