@model Item

@{
    ViewBag.Title = "Item Update";
}


        <h2 class="alert alert-warning">  Edit Item :   
            <span class="text-danger"> @Model.Name with Description : @Model.Description</span> 
        </h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post" class="row gx-3 gy-2 align-items-center">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save edit" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>


<hr />

<div>
    <a asp-action="Index" class="btn btn-outline-success">Back to Items</a>
</div>

@section Scripts{
        <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
        
