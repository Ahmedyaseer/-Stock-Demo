@model IEnumerable<IncludeDtoStoreBalanceItem>
@{
    Layout = "_MyLayout";
}

<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <form class="d-flex container-fluid" role="search" method="post" asp-action="Index">
      <input class="form-control" type="search" placeholder="Search" name="search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

<table class="table table-bordered border-dark">
    <thead>
        <tr>
            <th>
                Store Name
            </th>
            <th>
                Items Name
            </th>
            <th>
                Balance 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.storeName
            </td>
            <td>
                @item.itemName
            </td>
            <td>
                @item.itemBalance
            </td>
           
        </tr>
}
    </tbody>
</table>

